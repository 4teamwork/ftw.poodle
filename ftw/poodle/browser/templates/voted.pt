<div class="poodleVoted" xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="ftw.poodle">
    <p i18n:translate="text_voted">Your input has been succesfully saved.</p>
    <form action="" method="post" id="poodleForm">
        <div class="inputs">
            <input type="hidden" name="uid" tal:attributes="value string:${context/UID}" />
            <input class="standalone allowMultiSubmit"
                   type="submit" value="Edit votes"
                   i18n:attributes="value ftwpoodle_edit_votes;"
                   name="form.button.edit_votes"/>
        </div>
    </form>
</div>