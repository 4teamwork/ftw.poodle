<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
      
      
<!-- View/edit free text columns 
 
  -->

<body>
    <!-- VIEW -->
    <metal:view_cell_macro define-macro="view_cell">                
      <div tal:content="cell_value" />
    </metal:view_cell_macro>

    <!-- EDIT name string:${fieldName}.${column}_desc:records; -->
    <metal:edit_cell_macro define-macro="edit_cell">
        <tal:define define="field_name string:${fieldName}.${column}:records;
                            id string:${column}_${fieldId};
                            show_hm python:False;
                            show_ymd python:True ;
                            future_years python:10;
                            inputname fieldName;
                            formname string:edit;
                            inputvalue python:  column_definition.getDefault(here);"><!--cell_value-->
            <metal:box use-macro="here/calendar_macros/macros/calendarDatePickerBox"></metal:box>
        </tal:define>

    </metal:edit_cell_macro>
    
   <!-- EMPTY EDIT -->
    <metal:edit_empty_cell_macro define-macro="edit_empty_cell">
        <tal:define define="field_name string:${fieldName}.${column}:records;
                            id string:${column}_${fieldId};
                            show_hm python:False;
                            show_ymd python:True;
                            future_years python:10;
                            inputname id;
                            formname string:edit;
                            inputvalue python: column_definition.getDefault(here);">
            <metal:box use-macro="here/calendar_macros/macros/calendarDatePickerBox"></metal:box>
        </tal:define>
    </metal:edit_empty_cell_macro>
</body>

</html>

